#!/usr/bin/env pwsh

$keyPath = "$HOME/.config/chezmoi/key.txt"
$agePath = "{{ .chezmoi.sourceDir }}/key.txt.age"

if (-not (Test-Path $keyPath)) {
    # Create the directory if it doesn't exist
    $dir = [System.IO.Path]::GetDirectoryName($keyPath)
    if (-not (Test-Path $dir)) {
        New-Item -ItemType Directory -Path $dir -Force | Out-Null
    }

    # Decrypt passphrase-encrypted age file into identity path
    # Requires interactive passphrase entry on first apply
    chezmoi age decrypt --passphrase --input $agePath --output $keyPath
}

