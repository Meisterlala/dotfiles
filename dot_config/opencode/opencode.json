{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "permission": {
    "read": "allow",
    "grep": "allow",
    "list": "allow",
    "edit": "allow",
    "webfetch": "allow",
    "bash": {
      "*": "ask",

      "sudo*": "deny",

      "mkdir*": "allow",
      "touch*": "allow",
      "cd*": "allow",
      "ls*": "allow",
      "kubectl get *": "allow",
      "kubectl describe *": "allow",
      "kubectl logs *": "allow",
      "helm list*": "allow",
      "helm get*": "allow",
      "helm status*": "allow",
      "helm show*": "allow",
      "helm repo*": "allow",
      "helm link*": "allow",
      "grep*": "allow",
      "tail*": "allow",
      "head*": "allow",
      "git diff*": "allow",
      "git status*": "allow",
      "git log*": "allow",
      "pwsh -NoProfile ./scripts/validate.ps1": "allow"
    }
  }
}
