{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",

  "small_model": "github-copilot-gpt4",

  "provider": {
    "openrouter": {
      "models": {
        "xiaomi/mimo-v2-flash:free": {
          "limit": {
            "context": 262144,
            "output": 65536
          }
        },
        "@preset/flash-3": {
          "limit": {
            "context": 1048576,
            "output": 262144
          }
        }
      }
    }
  },

  "permission": {
    "read": "allow",
    "grep": "allow",
    "list": "allow",
    "edit": "allow",
    "webfetch": "allow",
    "bash": {
      "*": "ask",

      "sudo*": "deny",

      "mkdir *": "allow",
      "touch *": "allow",
      "cd *": "allow",
      "ls *": "allow",
      "kubectl get *": "allow",
      "kubectl describe *": "allow",
      "kubectl logs *": "allow",
      "helm list *": "allow",
      "helm get *": "allow",
      "helm status *": "allow",
      "helm show *": "allow",
      "helm repo *": "allow",
      "helm link *": "allow",
      "flux get *": "allow",
      "grep *": "allow",
      "tail *": "allow",
      "head *": "allow",
      "git diff *": "allow",
      "git status *": "allow",
      "git log *": "allow",
      "pwsh -NoProfile ./scripts/validate.ps1": "allow",
      "tree *": "allow",
      "xargs *": "allow",

      "yq *": "allow",
      "jq *": "allow"
    }
  }
}
