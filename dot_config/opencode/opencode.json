{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "small_model": "github-copilot-gpt4",
  "agent": {
    "commit-review": {
      "description": "Review the current staged git changes. Provide feedback on code quality, style, and potential issues.",
      "prompt": "You are a senior software engineer reviewing the following git changes. Provide constructive feedback on code quality, style, and potential issues. Suggest improvements where necessary.",
      "permission": {
        "write": "ask",
        "edit": "ask",
      }
    },
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**"
    ]
  },
  "permission": {
    "read": "allow",
    "grep": "allow",
    "list": "allow",
    "edit": "allow",
    "webfetch": "allow",
    "bash": {
      "*": "ask",
      "sudo*": "deny",
      "mkdir *": "allow",
      "touch *": "allow",
      "cd *": "allow",
      "ls *": "allow",
      "kubectl get *": "allow",
      "kubectl describe *": "allow",
      "kubectl logs *": "allow",
      "helm list *": "allow",
      "helm get *": "allow",
      "helm status *": "allow",
      "helm show *": "allow",
      "helm repo *": "allow",
      "helm link *": "allow",
      "flux get *": "allow",
      "grep *": "allow",
      "tail *": "allow",
      "head *": "allow",
      "git diff *": "allow",
      "git status *": "allow",
      "git log *": "allow",
      "pwsh -NoProfile ./scripts/validate.ps1": "allow",
      "tree *": "allow",
      "xargs *": "allow",
      "yq *": "allow",
      "jq *": "allow"
    }
  }
}
