{{- /* Install PowerShell on Arch Linux if missing */ -}}
{{ if and (eq .chezmoi.os "linux") (eq .chezmoi.osRelease.id "arch") -}}
#!/bin/sh

if ! command -v pwsh >/dev/null 2>&1; then
  # Set color for output
  BLUE='\033[0;34m'
  NC='\033[0m' # No Color

  printf "${BLUE}==> üîç 'pwsh' command not found. Installing PowerShell...${NC}\n"
  yay -S --noconfirm --needed powershell-bin
fi

{{ end -}}


{{- /* Install PowerShell on Ubuntu if missing */ -}}
{{- if and (eq .chezmoi.os "linux") (eq .chezmoi.osRelease.id "ubuntu") -}}
#!/bin/bash

if ! command -v pwsh >/dev/null 2>&1; then
  # Set color for output
  BLUE='\033[0;34m'
  NC='\033[0m' # No Color

  printf "${BLUE}==> üîç 'pwsh' command not found. Installing PowerShell...${NC}\n"

  # Update the list of packages
  sudo apt-get update

  # Install pre-requisite packages.
  sudo apt-get install -y wget apt-transport-https software-properties-common

  # Get the version of Ubuntu
  source /etc/os-release

  # Download the Microsoft repository keys
  wget -q https://packages.microsoft.com/config/ubuntu/$VERSION_ID/packages-microsoft-prod.deb

  # Register the Microsoft repository keys
  sudo dpkg -i packages-microsoft-prod.deb

  # Delete the Microsoft repository keys file
  rm packages-microsoft-prod.deb

  # Update the list of packages after we added packages.microsoft.com
  sudo apt-get update

  # Install PowerShell
  sudo apt-get install -y powershell
fi
{{ end -}}
